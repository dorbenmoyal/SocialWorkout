@model SocialWorkout.Models.User



@{
	Layout = null;
}
@Scripts.Render("~/bundles/jquery")

<head>

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<link href="~/Content/LogIn/LogIn.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.js"></script>
	<script src="~/Content/bootstrap-tagsinput-latest/src/bootstrap-tagsinput.js"></script>
	<link href="~/Content/bootstrap-tagsinput-latest/src/bootstrap-tagsinput.css" rel="stylesheet" />




	<script src="~/Content/Filterable-Country-Picker-niceCountryInput/niceCountryInput.js"></script>
	<link href="~/Content/Filterable-Country-Picker-niceCountryInput/niceCountryInput.css" rel="stylesheet" />

	<style>

		:root {
			--loginLabelBackgroundColor: #2c3338;
		}
	</style>

</head>



<center style=" font-size: 33px;color: white;">Sign Up</center>



<body class="align">

	<div class="grid">

		@using (Html.BeginForm("Create", "User",
			new { ReturnUrl = ViewBag.ReturnUrl },
			FormMethod.Post, new { @class = "form login" }))
		{
		<form class="form login" role="form" data-toggle="validator">

			<div class="form-group">
				<div class="form__field">

					<label><i class="material-icons">email</i></label>
					<input type="email" name="email" class="form__input" placeholder="Email" required>
				</div>
			</div>



			<div class="form__field">
				<label><i class="material-icons">https</i></label>
				<input type="password" name="password" class="form__input" placeholder="Password" id="inputPassword" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$" required title="Password must be UpperCase, LowerCase and Number" >
			</div>

			<div class="form__field">
				<label><i class="material-icons">perm_identity</i></label>
				<input type="text" name="FirstName" class="form__input" placeholder="First Name" pattern=".{3,10}" required title="First name must be 3 to 10 characters">
			</div>

			<div class="form__field">
				<label><i class="material-icons">perm_identity</i></label>
				<input type="text" name="LastName" class="form__input" placeholder="Last Name"  pattern=".{3,10}" required title="Last name must be3 to 10 characters">
			</div>
			

			<div class="form__field">
				<label><i class="material-icons">face</i></label>
				<input type="number" name="Age" class="form__input" placeholder="Age" min="12" max="95" required>
			</div>

			<div>
				<div style="    margin-left: 41%; padding-bottom: 3%;">Select Country<i class="material-icons">location_on</i> </div>
				<div class="niceCountryInputSelector" style="    width: 255px;
	margin-left: 22%;" data-selectedcountry="_NF" data-showspecial="false" data-showflags="true" data-i18nall="All selected"
					 data-i18nnofilter="No selection" data-i18nfilter="Filter" data-onchangecallback="onChangeCallback" />

			</div>

			<div class="form__field" style="display:none">
				<label><i class="material-icons">location_on</i></label>
				<input id="country" type="text" name="Country" class="form__input" placeholder="Country" required>

			</div>



			<div class="form__field">
				<label><i class="material-icons">accessibility</i></label>
				<p style="padding-left:8px" type="text" name="Gender" class="form__input">Gender</p>

				<label class="radio-inline"><input type="radio" name="Gender" value="Male">Male</label>
				<label class="radio-inline"><input type="radio" name="Gender" value="Female">Female</label>
			</div>

			<!--<div class="form__field">
		<label><i class="material-icons">favorite</i></label>
		<input type="text" name="Specialization" class="form__input" placeholder="Specialization" required>
	</div> -->





			<div class="container">

				<!-- Trigger the modal with a button -->
				<button style="margin-left: 7%;  background-color: cadetblue;margin-left: 7%;border-color: beige; " type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Let me in</button>

				<!-- Modal -->
				<div class="modal fade" id="myModal" role="dialog">
					<div class="modal-dialog">

						<!-- Modal content-->
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal">&times;</button>
								<h4 class="modal-title" style="color: cadetblue;font-family: inherit; ">Almost There...</h4>
							</div>
							<div class="modal-body">

								<h3 style="color:black">Hi, Let us know about you for the best experience </h3>

								

								<input class="nond" style="height: 0%;" type="text" value="Running,FootBall,Hokey" data-role="tagsinput" placeholder="Write Down Your Favorites Sports" />

								@Html.CheckBoxFor(m => m.preferens.Specialization, "dogs")



								<p style="    color: black;">Enter Your Best Time To Work Out</p>
								@Html.RadioButtonFor(m => m.preferens.PreferedTime, "Morning") Morning
								@Html.RadioButtonFor(m => m.preferens.PreferedTime, "Noon") Noon
								@Html.RadioButtonFor(m => m.preferens.PreferedTime, "After Noon") After Noon



					

							</div>



							<div class="form__field">
								<input type="submit" value="Sign Up" style=" background-color: cadetblue;">

							</div>


							<div class="modal-footer">
								<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
							</div>
						</div>

					</div>
				</div>

			</div>



		</form>
		}



		<p class="text--center" style="    color: #737373;">Already a member? <a href="~/Login/index">Login now</a> <svg class="icon"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="assets/images/icons.svg#arrow-right"></use></svg></p>

	</div>

	<svg xmlns="http://www.w3.org/2000/svg" class="icons"><symbol id="arrow-right" viewBox="0 0 1792 1792"><path d="M1600 960q0 54-37 91l-651 651q-39 37-91 37-51 0-90-37l-75-75q-38-38-38-91t38-91l293-293H245q-52 0-84.5-37.5T128 1024V896q0-53 32.5-90.5T245 768h704L656 474q-38-36-38-90t38-90l75-75q38-38 90-38 53 0 91 38l651 651q37 35 37 90z" /></symbol><symbol id="lock" viewBox="0 0 1792 1792"><path d="M640 768h512V576q0-106-75-181t-181-75-181 75-75 181v192zm832 96v576q0 40-28 68t-68 28H416q-40 0-68-28t-28-68V864q0-40 28-68t68-28h32V576q0-184 132-316t316-132 316 132 132 316v192h32q40 0 68 28t28 68z" /></symbol><symbol id="user" viewBox="0 0 1792 1792"><path d="M1600 1405q0 120-73 189.5t-194 69.5H459q-121 0-194-69.5T192 1405q0-53 3.5-103.5t14-109T236 1084t43-97.5 62-81 85.5-53.5T538 832q9 0 42 21.5t74.5 48 108 48T896 971t133.5-21.5 108-48 74.5-48 42-21.5q61 0 111.5 20t85.5 53.5 62 81 43 97.5 26.5 108.5 14 109 3.5 103.5zm-320-893q0 159-112.5 271.5T896 896 624.5 783.5 512 512t112.5-271.5T896 128t271.5 112.5T1280 512z" /></symbol></svg>


	<script>
		function onChangeCallback(ctr) {
			console.log("The country was changed: " + ctr);
			//$("#selectionSpan").text(ctr);
			document.getElementById("country").value = ctr;

		}

		$(document).ready(function () {
			$(".niceCountryInputSelector").each(function (i, e) {
				new NiceCountryInput(e).init();
			});
		});
	</script>


</body>

