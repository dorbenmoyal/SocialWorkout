<center style=" font-size: 33px;color: white;">Trainer Sign Up</center>



<body class="align" ng-app="signUp" ng-controller="SignUpctrlForVlidity">

	<div class="grid">

		@using (Html.BeginForm("Create", "Trainer",
			new { ReturnUrl = ViewBag.ReturnUrl },
			FormMethod.Post, new { @class = "form login" }))
		{
		<form class="form login" role="form" data-toggle="validator">

			<div class="form-group">
				<div class="form__field">

					<label><i class="material-icons">email</i></label>
					<input ng-change="CheckForValidity()" ng-model="EmailInputValue" type="email" name="email" class="form__input" placeholder="Email" required>
				</div>
			</div>



			<div class="form__field">
				<label><i class="material-icons">https</i></label>
				<input type="password" name="password" class="form__input" placeholder="Password" id="inputPassword" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?!.*\s).*$" required title="Password must be UpperCase, LowerCase and Number">
			</div>

			<div class="form__field">
				<label><i class="material-icons">perm_identity</i></label>
				<input type="text" name="FirstName" class="form__input" placeholder="First Name" pattern=".{3,10}" required title="First name must be 3 to 10 characters">
			</div>

			<div class="form__field">
				<label><i class="material-icons">perm_identity</i></label>
				<input type="text" name="LastName" class="form__input" placeholder="Last Name" pattern=".{3,10}" required title="Last name must be3 to 10 characters">
			</div>


			<div class="form__field">
				<label><i class="material-icons">face</i></label>
				<input type="number" name="Age" class="form__input" placeholder="Age" min="12" max="95" required>
			</div>


			<div class="form__field">
				<label>
					<i class="material-icons">
						attach_money
					</i>
				</label>
				<input type="number" name="Price" class="form__input" placeholder="Price Per Practice in Dolars $" required>
			</div>





			<div class="form__field">
				<label><i class="material-icons">accessibility</i></label>
				<p style="padding-left:8px" type="text" name="Gender" class="form__input">Gender</p>

				<label class="radio-inline"><input type="radio" name="Gender" value="Male">Male</label>
				<label class="radio-inline"><input type="radio" name="Gender" value="Female">Female</label>

			</div>


		
			@*<div class="row">
				<p style="padding-left:8px; color:white;">Your Sports</p>
				<div name="FavoriteSports"  id="tagBoxContainer" ng-model="tagBox"></div>

			</div>*@


			@*<div class="form__field">
				<label><i class="material-icons">notes</i></label>
				<input type="text" name="Description" class="form__input" style="height: 15%;" placeholder="Description">
			</div>*@





			<input style="width: 100%;background-color: cadetblue;margin-left: 6%;" type="submit" value="Sign Up">




		</form>
